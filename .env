# ===========================================
# FlowAtGenAi Environment Configuration
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/flowatgenai"

# Redis
REDIS_URL="redis://localhost:6379"

# Temporal (Optional - for durable workflows)
TEMPORAL_ADDRESS="localhost:7233"
TEMPORAL_NAMESPACE="default"

# Authentication
JWT_SECRET="super-secret-jwt-key-change-in-production-min-32-chars"
NEXTAUTH_SECRET="nextauth-secret-change-in-production-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Encryption Key (exactly 32 characters)
ENCRYPTION_KEY="12345678901234567890123456789012"

# App Settings
NODE_ENV="development"

# ===========================================
# Optional: AI Providers (add your keys)
# ===========================================
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# ===========================================
# Optional: Stripe Billing
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
